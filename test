def discard_candies(alice_candies, petr_candies, mary_candies):
    total_candies = alice_candies + petr_candies + mary_candies
    candies_to_discard = total_candies % 3
    return candies_to_discard

# Количество конфет у каждого человека
alice_candies = 15
petr_candies = 97
mary_candies = 3

candies_to_discard = discard_candies(alice_candies, petr_candies, mary_candies)
print(f"Количество конфет, которые нужно выкинуть: {candies_to_discard}")
